{
  "name": "koapi-boilerplate",
  "version": "0.1.0",
  "description": "RESTful API framework based on koajs",
  "main": "build/index.js",
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "ava": {
    "files": [
      "test/**/*.test.js",
      "!test/__lib__/**/*"
    ],
    "source": [
      "**/*.{js,jsx,es}",
      "!build/**/*"
    ],
    "require": [
      "babel-register",
      "babel-polyfill",
      "should",
      "should-http"
    ],
    "babel": "inherit"
  },
  "nyc": {
    "extension": [
      ".jsx",
      ".es"
    ]
  },
  "scripts": {
    "start": "export NODE_ENV=production && npm run build && node build/index.js",
    "staging": "export NODE_ENV=staging && npm run build && node build/index.js",
    "production": "export NODE_ENV=production && npm run build && node build/index.js",
    "test": "export NODE_ENV=test && npm run db:rollback && npm run db:setup && nyc ava",
    "test:report": "nyc report --reporter=lcov",
    "build": "babel -d build/ src/",
    "apidoc": "gulp apidoc",
    "dev:server": "NODE_ENV=development && npm run build && node build/index.js",
    "dev:apidoc": "gulp apidoc:watch",
    "serve:apidoc": "http-server ./docs",
    "serve:coverage": "http-server ./coverage/lcov-report",
    "babel": "babel-node",
    "nyc": "nyc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-rest/open-rest-es6-boilerplate.git"
  },
  "keywords": [
    "RESTful",
    "API",
    "Framework",
    "open-rest",
    "restify"
  ],
  "author": "Redstone Zhao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/open-node/open-rest-es6-boilerplate/issues"
  },
  "homepage": "https://github.com/open-node/open-rest-es6-boilerplate#readme",
  "dependencies": {
    "commander": "^2.9.0",
    "cron": "^1.1.0",
    "exec": "^0.2.1",
    "glob": "^7.0.3",
    "moment": "^2.13.0",
    "open-cache": "^0.3.1",
    "open-rest": "6.0.8",
    "open-rest-access-log": "^0.1.0",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "gulp": "^3.9.1",
    "gulp-apidoc": "^0.2.4",
    "istanbul": "^1.0.0-alpha",
    "ava": "^0.15.1",
    "ava-spec": "^1.0.0",
    "nyc": "^6.4.4",
    "nodemon": "^1.9.2",
    "should": "^8.3.2",
    "should-http": "0.0.4",
    "supertest": "^1.2.0",
    "supertest-as-promised": "^3.1.0"
  }
}
