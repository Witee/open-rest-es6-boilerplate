{
  "name": "open-rest-es6-boilerplate",
  "version": "0.1.0",
  "description": "RESTful API framework based on koajs",
  "main": "build/index.js",
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "scripts": {
    "test": "export NODE_ENV=apitest && npm install && npm run build && node ./test/index.js",
    "build": "babel -d build/ src/",
    "locale:read": "find ./src/app -type f | ./bin/read.js > bin/locale/application.pot && msgmerge -UN --no-wrap ./bin/locale/en.po ./bin/locale/application.pot && msgmerge -UN --no-wrap ./bin/locale/zh.po ./bin/locale/application.pot",
    "locale:write": "./bin/write.js ./bin/locale/zh.po zh && ./bin/write.js ./bin/locale/en.po en",
    "apidoc": "gulp apidoc",
    "start": "NODE_ENV=development && npm run build && node build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/open-rest/open-rest-es6-boilerplate.git"
  },
  "keywords": [
    "RESTful",
    "API",
    "Framework",
    "open-rest",
    "restify"
  ],
  "author": "Redstone Zhao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/open-node/open-rest-es6-boilerplate/issues"
  },
  "homepage": "https://github.com/open-node/open-rest-es6-boilerplate#readme",
  "dependencies": {
    "commander": "^2.9.0",
    "cron": "^1.1.0",
    "exec": "^0.2.1",
    "glob": "^7.0.3",
    "md5": "^2.1.0",
    "moment": "^2.13.0",
    "on-finished": "^2.3.0",
    "open-cache": "^0.3.1",
    "open-rest": "6.0.11",
    "open-rest-access-log": "^0.1.0",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "gulp": "^3.9.1",
    "gulp-apidoc": "^0.2.4",
    "restspec": "^1.0.2"
  }
}
